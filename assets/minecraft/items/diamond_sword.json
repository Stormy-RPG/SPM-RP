{
  "model": {
    "type": "minecraft:select",
    "property": "minecraft:component",
    "component": "minecraft:custom_name",
    "cases": [
      {
        "when": ["Chef's Knife", "Нож шефа"],
        "model": {
          "type": "minecraft:model",
          "model": "mirrp:item/other/chiefknife"
        }
      },
      {
        "when": ["Sickle", "Серп"],
        "model": {
          "type": "minecraft:model",
          "model": "mirrp:item/other/sickle"
        }
      },
      {
        "when": ["Sting", "Жало"],
        "model": {
          "type": "minecraft:select",
          "property": "minecraft:display_context",
          "cases": [
            {
              "when": ["firstperson_righthand", "thirdperson_righthand", "gui", "head", "ground", "fixed"],
              "model": {
                "type": "minecraft:model",
                "model": "mirrp:item/other/sting"
              }
            }
          ],
          "fallback": {
            "type": "minecraft:model",
            "model": "mirrp:item/other/stingoffhand"
          }
        }
      }
    ],
    "fallback": {
      "type": "minecraft:model",
      "model": "minecraft:item/diamond_sword"
    }
  }
}